<div id="divSigninModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button id="btnCloseModal" name="btnCloseModal" type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"> Sign in </h4>
      </div>
      <div class="modal-body-Signin" style="padding:20px 60px;">
          <div class="text-center">
            <a href="/auth/facebook" class="btn btn-primary">
              <i class="fa fa-facebook fa-fw"></i> Sign in with Facebook
            </a>
            <h6>---- OR ----</h6>
          </div>
        <form action="/login" method="post">
            <div class="form-group">
              <div class="input-group margin-bottom-sm">
                <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                <input class="form-control" name="email" type="text" placeholder="Email address" autofocus required>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                <input class="form-control" name="password" type="password" placeholder="Password" required>
              </div>
            </div>
            <div class="form-group checkbox">
              <label class="checkbox sign_checkbox" for="remember_me">
                <input id="remember_me" type="checkbox" value="1" name="remember_me" checked>
                <span>Remember me</span>
              </label>
            </div>
            <div class="form-group">
              <button class="col-sm-3 btn btn-primary" type="submit">
                <i class="fa fa-user"></i>
                Login
              </button>
              <a class="btn btn-link" href="/forgot">Forgot your password?</a>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>