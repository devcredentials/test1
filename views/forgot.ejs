	</head>
	<body>
		<% include partials/navbar %>
		<div class="container">
      <br/>
			<div class="col-sm-8 col-sm-offset-2">
        <form method="POST">
          <legend>Forgot Password</legend>
          <div class="form-group">
            <p>Enter your email address below and we will send you password reset instructions.</p>
            <div class="input-group margin-bottom-sm">
              <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
              <input class="form-control" id="email" name="email" type="email" placeholder="Email address" autofocus required>
            </div>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-key"></i> Reset Password
            </button>
          </div>
        </form>
      </div>
    </div>
    <% include partials/footer %>
    <script src="/js/lib/jquery-2.2.0.min.js"></script>
    <script src="/js/lib/bootstrap.min.js"></script>
    <script>
      $(document).ready(function () {
        // $('ul.nav > li').click(function(e) {
        //     //e.preventDefault();
        //     $('ul.nav > li').removeClass('active');
        //     $(this).addClass('active');
        // });
        //--
        $('ul.nav > li').removeClass('active');
        $('#nsignin').addClass('active');
        //--
        $('#btnCloseModal').click(function(e) {
            //e.preventDefault();
            $('#nsignup').removeClass('active');
            $('#nsignin').addClass('active');
        });
        //--
        $(document).on('hide.bs.modal','#divSignupModal', function () {
          $('#nsignup').removeClass('active');
          $('#nsignin').addClass('active');
        });
      });
	</body>
</html>
