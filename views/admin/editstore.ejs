  <body>
    <% include ../partials/navbar %>
    <br>
      <div class="col-lg-12 pull-left">
          <div class="content_area padding_all0">
            <span><strong>Edit Store : </strong></span>
            <br>
            <br>
            <div class="container">
              <form id="uploadForm" name="uploadForm" role="form" action="/uploads/profilepic" method="post" enctype="multipart/form-data">
                <img id='ldisplayimage' src="" alt="profileImg"></img>
                <input type="file" id="userPhoto" name="userPhoto"  value="Select Image"/>
                <input type="submit" id="Submit" value="Submit"/>
              </form>
            </div>
            <form id="editUser" action='../../store/save/id:<%=store._id %>' method='post'>
              <div id="divContainer">
                <div>
                  <div class="input-group">
                    <span class="input-group-addon">Store Name</span>
                    <input id="storename" name="storename" type="text" class="form-control" value='<%= store.storename %>' />
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon">Display Name</span>
                    <input id="dispName" name="dispName" type="text" class="form-control" value='<%= store.stdisplayname %>' />
                  </div>


                  <div class="input-group">
                    <span class="input-group-addon">Creation Date</span>
                    <input id="doc" name="doc" type="text" class="form-control" value='<%= store.createdon %>' />
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon">Favicon</span>
                    <input id="favicon" name="favicon" type="text" class="form-control" value='<%= store.favicon %>' />
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon">Description</span>
                    <input id="description" name="description" type="text" class="form-control" value='<%= store.stdescription %>' />
                  </div>

                  <div class="input-group">
                   <span class="input-group-addon">Verification Status</span>
                     <select class="form-control" id="isVerifiedStore" name="isVerifiedStore">
                       <% if( locals.store.isverified === "0"){ %>
                         <option value='0' selected="1" >NA</option>
                         <% } else {%>
                            <option value='0' >NA</option>
                         <% } %>
                        <% if( locals.store.isverified === '1') { %>
                            <option value='1' selected="1">Applied For</option>
                          <% }  else { %>
                            <option value='1'>Applied For</option>
                          <% } %>
                          <% if( locals.store.isverified === '2') { %>
                              <option value='2'selected="1">In Process</option>
                            <% } else { %>
                              <option value='2'>In Process</option>
                            <% } %>
                          <% if( locals.store.isverified === '3') { %>
                              <option value='3' selected="1">Verified</option>
                            <% }  else { %>
                              <option value='3'>Verified</option>
                            <% } %>
                     </select>
                   </div>
                   <div class="input-group">
                      <span class="input-group-addon">Claimed Status</span>
                        <select class="form-control" id="isClaimedStore" name="isClaimedStore">
                          <% if( locals.store.isclaimed === '0'){ %>
                              <option value='0' selected >NA</option>
                            <% } else { %>
                                <option value='0'>NA</option>
                            <% } %>
                          <% if( locals.store.isclaimed === '1') { %>
                              <option value='1' selected>Applied</option>
                            <% } else { %>
                              <option value='1'>Applied</option>
                            <% } %>
                          <% if( locals.store.isclaimed === '2') { %>
                              <option value='2' selected>Claim Initiated</option>
                            <% } else { %>
                              <option value='2'>Claim Initiated</option>
                            <% } %>
                          <% if( locals.store.isclaimed === '3') { %>
                              <option value='3' selected >Claimed</option>
                            <% } else { %>
                              <option value='3'>Claimed</option>
                            <% } %>
                        </select>
                  </div>

                </div>
              </div>
              <br>
              <input type="submit" id="save" value="Save" class="btn btn-primary btn-lg btn-block" />
            </form>
          </div>
      </div>
      <% include ../partials/footer %>
      <script src="/js/lib/jquery-2.2.0.min.js"></script>
      <script src="/js/lib/bootstrap.min.js"></script>
