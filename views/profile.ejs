<!-- views/profile.ejs -->
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TryRoom-User Profile</title>
    <meta name="title" content="TryRoom-User Profile">
    <meta name="description" content="TryRoom is a community for all the world's shopping.">
    <meta name="author" content="">
    <meta name="keywords" content="All stores in one place">
    <!-- load bootstrap css -->
    <link rel="stylesheet" href="/css/lib/bootstrap.min.css">
    <!-- load fontawesome -->
    <link rel="stylesheet" href="/font-awesome-4.5.0/css/font-awesome.min.css">
    <!-- load googelpais opensans -->
    <!-- <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'> -->
    <!-- load styles -->
		<style>
      body {
        padding-top:50px;
        word-wrap:break-word;
      }
    </style>
  </head>
  <body>
    <% include partials/navbar %>
    <div class="container">

        <div class="page-header text-center">
            <h1></span>Profile Page</h1>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <div class="well">
                    <p><img src="<%= user.displayimage %>"><br><p>
                    <h3 class="text-primary"> Local</h3>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.primaryemail %><br>
                        <strong>username</strong>: <%= user.displayname %>
                    </p>
                    <h3 class="text-primary"> Facebook</h3>
                    <p>
                        <strong>id</strong>: <%= user.facebook.id %><br>
                        <strong>email</strong>: <%= user.facebook.email %><br>
                        <strong>First Name </strong>: <%= user.facebook.firstName %><br>
                        <strong>Last Name </strong>: <%= user.facebook.lastName %><br>
                        <strong>displayName</strong>: <%= user.facebook.displayName %><br>
                        <strong>gender</strong>: <%= user.facebook.gender %><br>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <% include partials/footer %>
		<script src="/js/lib/jquery-2.2.0.min.js"></script>
    <script src="/js/lib/bootstrap.min.js"></script>
		<script>
      $(document).ready(function () {
        // $('ul.nav > li').click(function (e) {
        //     //e.preventDefault();
        //     $('ul.nav > li').removeClass('active');
        //     $(this).addClass('active');
        // });
        $('ul.nav > li').removeClass('active');
        $('#nprofile').addClass('active');
    	});
    </script>
  </body>
</html>
